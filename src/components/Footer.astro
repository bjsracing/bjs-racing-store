---
// src/components/Footer.astro
const currentYear = new Date().getFullYear();
---
<footer class="bg-slate-800 text-slate-400 mt-12 mobile:mt-16 tablet:mt-20">
    <div class="container mx-auto px-3 mobile:px-4 tablet:px-6 py-6 mobile:py-8">
        {/* Grid Layout untuk Tablet/Desktop */}
        <div class="grid grid-cols-1 tablet:grid-cols-3 gap-6 mobile:gap-8 tablet:gap-10 mb-6 mobile:mb-8">
            {/* Company Info */}
            <div class="text-center tablet:text-left">
                <h3 class="text-base mobile:text-lg tablet:text-xl font-bold text-white mb-3 mobile:mb-4">
                    BJS RACING STORE
                </h3>
                <p class="text-sm mobile:text-base text-slate-400">
                    Distributor Spray Paint dan Onderdil Motor Terpercaya
                </p>
            </div>

            {/* Contact Info */}
            <div class="text-center">
                <h4 class="text-sm mobile:text-base font-semibold text-white mb-2 mobile:mb-3">
                    Kontak Kami
                </h4>
                <p class="text-xs mobile:text-sm text-slate-400">Email: info@bjsracing.com</p>
                <p class="text-xs mobile:text-sm text-slate-400">WhatsApp: +62 812-3456-7890</p>
            </div>

            {/* Social Media */}
            <div class="text-center tablet:text-right">
                <h4 class="text-sm mobile:text-base font-semibold text-white mb-2 mobile:mb-3">
                    Follow Kami
                </h4>
                <div class="flex justify-center tablet:justify-end space-x-4">
                    <a href="#" class="text-slate-400 hover:text-orange-500 transition-colors text-sm">
                        Instagram
                    </a>
                    <a href="#" class="text-slate-400 hover:text-orange-500 transition-colors text-sm">
                        Facebook
                    </a>
                </div>
            </div>
        </div>

        {/* Copyright Section */}
        <div class="border-t border-slate-700 pt-6 mobile:pt-8 text-center">
            <p class="text-sm mobile:text-base tablet:text-lg">
                &copy; {currentYear} BJS RACING STORE. All rights reserved.
            </p>
            <p class="text-xs mobile:text-sm mt-2 tablet:mt-3">
                Developed with ❤️ for the automotive community
            </p>
        </div>
    </div>
</footer>