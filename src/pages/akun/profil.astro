---
// File: /src/pages/akun/profil.astro
import MainLayout from '@/layouts/MainLayout.astro';
import ProfileView from '@/components/ProfileView.jsx';
import AccountSidebar from '@/components/AccountSidebar.astro';

// Proteksi halaman
const { session } = Astro.locals;
if (!session) {
  return Astro.redirect('/login?redirect=/akun/profil');
}
---
<MainLayout title="Profil Saya - BJS Racing Store">
  <main class="container mx-auto px-4 py-8">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">

      <AccountSidebar currentPage={Astro.url.pathname} />

      {/* Konten Utama */}
      <section class="md:col-span-3">
        <h1 class="text-2xl font-bold mb-6">Profil Saya</h1>
        <ProfileView client:load />
      </section>

    </div>
  </main>
</MainLayout>