---
// File: /src/pages/akun/alamat.astro
import MainLayout from '@/layouts/MainLayout.astro';
import AddressSection from '@/components/AddressSection.tsx';
import AccountSidebar from '@/components/AccountSidebar.astro';

// Proteksi halaman
const { session } = Astro.locals;
if (!session) {
  return Astro.redirect('/login?redirect=/akun/alamat');
}
---
<MainLayout title="Buku Alamat - BJS Racing Store">
  <main class="container mx-auto px-4 py-8">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">

      <AccountSidebar currentPage={Astro.url.pathname} />
      
      <section class="md:col-span-3">
        <AddressSection client:load />
      </section>

    </div>
  </main>
</MainLayout>