---
// File: /src/pages/akun/voucher.astro
import MainLayout from '@/layouts/MainLayout.astro';
import AccountSidebar from '@/components/AccountSidebar.astro';
import MyVouchersView from '@/components/MyVouchersView.jsx';

const { session } = Astro.locals;
if (!session) {
  return Astro.redirect('/login?redirect=/akun/voucher');
}
---
<MainLayout title="Voucher Saya - BJS Racing Store">
  <main class="container mx-auto px-4 py-8">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      
      <AccountSidebar currentPage={Astro.url.pathname} />

      <section class="md:col-span-3">
        <h1 class="text-2xl font-bold mb-6">Voucher Saya</h1>
        <MyVouchersView client:load />
      </section>
      
    </div>
  </main>
</MainLayout>