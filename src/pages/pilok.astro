---
// src/pages/pilok.astro
import MainLayout from '../layouts/MainLayout.astro';
import ProductCatalog from '../components/ProductCatalog.jsx';
import id from '../locales/id/common.json';

const filterConfig = {
    category: "Pilok",
    showMerekFilter: true,
    showLiniProdukFilter: true,
    showColorVariantFilter: true,
    showUkuranFilter: true,
}
---

<MainLayout title={id.product_page.pilok_title + " - BJS RACING STORE"}>
    <div class="container mx-auto px-4 py-8">
        <h1 class="text-2xl font-bold mb-1">{id.product_page.pilok_title}</h1>
        <p class="text-sm text-slate-500 mb-6">{id.product_page.pilok_subtitle}</p>
        
        <ProductCatalog client:only="react" filterConfig={filterConfig} cardType="product" />
    </div>
</MainLayout>