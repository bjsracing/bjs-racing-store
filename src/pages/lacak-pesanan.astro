---
// File: /src/pages/lacak-pesanan.astro
import MainLayout from '@/layouts/MainLayout.astro';
import TrackingView from '@/components/TrackingView.jsx';

// Ambil parameter dari URL
const awb = Astro.url.searchParams.get('awb');
const courier = Astro.url.searchParams.get('courier');
---
<MainLayout title={`Lacak Resi ${awb}`}>
  <div class="max-w-4xl mx-auto py-8">
    <h1 class="text-3xl font-bold mb-6">Lacak Pengiriman</h1>
    <TrackingView client:load awb={awb} courier={courier} />
  </div>
</MainLayout>