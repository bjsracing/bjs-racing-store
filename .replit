modules = ["nodejs-22"]
hidden = [".config", "package-lock.json"]

# Perintah untuk menjalankan server development Astro
run = "npm run dev"

# Konfigurasi port agar Replit menampilkan preview
[http]
port = 4321
host = "0.0.0.0"
secure = false

[[ports]]
localPort = 4321
externalPort = 80

[[ports]]
localPort = 4322
externalPort = 3000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 45401
externalPort = 3001

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Development Server"

[[workflows.workflow]]
name = "Development Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"
